<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p>Completed: <%=@task.completed? %></p>
<p><%= link_to 'Edit Task', edit_task_path %></p>
<p><%= link_to 'Back to Task', tasks_path %></p>
<%= link_to 'Delete Task',
  task_path(@task),
  data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
